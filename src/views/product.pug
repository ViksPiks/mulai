extends layout.pug
include ../components/button/button.pug
include ../components/radio/radio.pug

block head
  link(rel="stylesheet", href="product.scss")

block main
  section.product
    .container
      .product-img
        img(src="../assets/images/dress-1.jpg", alt="dress")
      .radio-btns
        input(type="radio", name="product-slide", value="1", checked)
        input(type="radio", name="product-slide", value="2")
        input(type="radio", name="product-slide", value="3")
        input(type="radio", name="product-slide", value="4")
      .product-description
        h2 Black Cady Mini Dress
        span.product-price â‚¬ 150

        ul.size-list
          each val in ["XS", "S", "M", "L"]
            li
              +radio(val)
        button.size-btn
          svg(width="25px", height="25px")
            use(href="../assets/svg/measuring-tape.svg#tape")
          | Size Guide

      +button("Add To Bag")

      .accordeons
        .accordeon
          span Composition
          button.accordeon-btn
            svg(width="11px", height="6px")
              use(href="../assets/svg/arrow.svg#arrow")
        .accordeon
          span Size &amp; Fit
          button.accordeon-btn
            svg(width="11px", height="6px")
              use(href="../assets/svg/arrow.svg#arrow")

      a.contact-us-btn(href="contact-us.pug") Contact Us
